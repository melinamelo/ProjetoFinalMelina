@model ProjetoFinalMelina.Models.LocalRealizacao

@{
    ViewData["Title"] = "Edit";
}

<h1 class="pags">Editar este local</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="form-edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LocalNome" class="control-label"></label>
                <input asp-for="LocalNome" class="form-control" />
                <span asp-validation-for="LocalNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CidadeId" class="control-label"></label>
                <select asp-for="CidadeId" class="form-control" asp-items="ViewBag.CidadeId"></select>
                <span asp-validation-for="CidadeId" class="text-danger"></span>
            </div>
            <div class="button">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="a-edit5">Voltar para a lista de locais</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
