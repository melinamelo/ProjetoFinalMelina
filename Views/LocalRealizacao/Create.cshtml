@model ProjetoFinalMelina.Models.LocalRealizacao

@{
    ViewData["Title"] = "Create";
}

<h1 class="pags">Adicionar um novo local de realização do procedimento</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="form-edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LocalNome" class="control-label"></label>
                <input asp-for="LocalNome" class="form-control" />
                <span asp-validation-for="LocalNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CidadeId" class="control-label">Cidade</label>
                <select asp-for="CidadeId" class ="form-control" asp-items="ViewBag.CidadeId"></select>
            </div>
            <div class="button-criar">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="a-edit">Voltar para a lista de locais</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
