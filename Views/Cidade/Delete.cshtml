@model ProjetoFinalMelina.Models.Cidade

@{
    ViewData["Title"] = "Delete";
}

<h1 class="pags">Deletar a cidade</h1>

<h3 class="pags">Você deseja deletar esta cidade?</h3>
<div class="flex">
    <dl class="info">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CidadeNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CidadeNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado.EstadoNome)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="form-button">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a lista de cidades</a>
    </form>
</div>
