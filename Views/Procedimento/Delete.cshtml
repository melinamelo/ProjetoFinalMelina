@model ProjetoFinalMelina.Models.Procedimento

@{
    ViewData["Title"] = "Delete";
}

<h1 class="pags">Deletar este procedimento</h1>

<h3 class="pags">Você deseja deletar este procedimento?</h3>
<div class="flex">
    <dl class="info">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcedimentoNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcedimentoNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProcedimentoObservacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProcedimentoObservacao)
        </dd>
        <dt class = "col-sm-2">
