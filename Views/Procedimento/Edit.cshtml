@model ProjetoFinalMelina.Models.Procedimento

@{
    ViewData["Title"] = "Edit";
}
<link href="~/css/hover.css" rel="stylesheet" />
<h1 class="pags">Editar este procedimento</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="form-edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProcedimentoNome" class="control-label"></label>
                <input asp-for="ProcedimentoNome" class="form-control" />
                <span asp-validation-for="ProcedimentoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcedimentoObservacao" class="control-label"></label>
                <input asp-for="ProcedimentoObservacao" class="form-control" />
                <span asp-validation-for="ProcedimentoObservacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoProcedimentoId" class="control-label"></label>
                <select asp-for="TipoProcedimentoId" class="form-control" asp-items="ViewBag.TipoProcedimentoId"></select>
                <span asp-validation-for="TipoProcedimentoId" class="text-danger"></span>
            </div>
            <div class="button">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="a-edit2">Voltar para a lista de procedimentos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
